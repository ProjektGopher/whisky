{
    "disabled": [
        "commit-msg"
    ],
    "hooks": {
        "commit-msg": [
            "echo \"$1\""
        ],
        "pre-commit": [
            "composer lint -- --test"
        ],
        "pre-push": [
            "composer lint -- --test",
            "composer stan",
            "composer types",
            "composer test"
        ]
    }
}
